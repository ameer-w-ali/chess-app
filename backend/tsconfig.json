{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["server.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"],
}
